{
  "name": "holosubs",
  "version": "1.0.0",
  "description": "Hololive subtitle aggregator",
  "scripts": {
    "preinstall": "npm i --prefix client && npm i --prefix server",
    "server": "NODE_ENV=development npm run server --prefix server",
    "client": "npm start --prefix client",
    "start": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ruiisuuu/holosubs.git"
  },
  "keywords": [
    "hololive"
  ],
  "author": "Louis Mollick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ruiisuuu/holosubs/issues"
  },
  "homepage": "https://github.com/Ruiisuuu/holosubs#readme",
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
